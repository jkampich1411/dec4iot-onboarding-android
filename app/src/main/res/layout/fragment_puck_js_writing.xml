<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PuckJsWritingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/writingInfo_puckJs"
            android:layout_width="339dp"
            android:layout_height="54dp"
            android:text="@string/the_following_will_be_written"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.056" />

        <TextView
            android:id="@+id/sensorIdToBeWritten_puckJs"
            android:layout_width="246dp"
            android:layout_height="43dp"
            android:layout_marginTop="28dp"
            android:text="@string/sensor_id_to_be_written"
            android:textAlignment="center"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/writingInfo_puckJs"
            app:layout_constraintVertical_bias="0.046" />

        <TextView
            android:id="@+id/apiEndpointToBeWritten_puckJs"
            android:layout_width="346dp"
            android:layout_height="55dp"
            android:layout_marginTop="36dp"
            android:text="@string/api_endpoint_to_be_written"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sensorIdToBeWritten_puckJs"
            app:layout_constraintVertical_bias="0.028" />

        <TextView
            android:id="@+id/pleaseConfirm_puckJs"
            android:layout_width="369dp"
            android:layout_height="169dp"
            android:text="@string/please_confirm_dont_be_stupid_puckjs"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apiEndpointToBeWritten_puckJs"
            app:layout_constraintVertical_bias="0.132" />

        <CheckBox
            android:id="@+id/valuesChecked_puckJs"
            android:layout_width="335dp"
            android:layout_height="55dp"
            android:layout_marginTop="24dp"
            android:text="@string/i_have_confirmed"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.473"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pleaseConfirm_puckJs"
            app:layout_constraintVertical_bias="0.052" />

        <Button
            android:id="@+id/restart_puckJs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="72dp"
            android:backgroundTint="@color/green"
            android:text="@string/restart_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/write_puckJs"
            app:layout_constraintHorizontal_bias="0.193"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/valuesChecked_puckJs"
            app:layout_constraintVertical_bias="1.0"
            app:rippleColor="@color/green" />

        <Button
            android:id="@+id/write_puckJs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="72dp"
            android:backgroundTint="@color/red"
            android:text="@string/continue_puckjs"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/valuesChecked_puckJs"
            app:layout_constraintVertical_bias="1.0"
            app:rippleColor="@color/red" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>